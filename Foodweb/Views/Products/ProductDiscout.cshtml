@model IEnumerable<Foodweb.Models.Product>
<div class="product__discount">
    <div class="section-title product__discount__title">
        <h2>Giảm giá</h2>
    </div>
    <div class="row">
        <div class="product__discount__slider owl-carousel">
            @if (Model != null && Model.Count() > 0)
            {
                foreach (var item in Model.Where(item => item.Discout != null && item.Discout != 0))
                {

                    string url = $"/{item.Title}-{item.ProId}.html";
                    <div class="col-lg-4">
                        <div class="product__discount__item">
                            <div class="product__discount__item__pic set-bg"
                                 data-setbg="@Url.Content("~/images/products/" + item.Thumb)">
                                <div class="product__discount__percent">@item.Discout %</div>
                                <ul class="product__item__pic__hover">
                                    <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                    <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                    <li><a href=><i class="fa fa-shopping-cart"></i></a></li>
                                </ul>
                            </div>
                            <div class="product__discount__item__text">
                                <h5><a href="@Url">@item.ProName</a></h5>
                                <div class="product__item__price">
                                    @(item.Price - (item.Price * (item.Discout) / 100)) <span>@item.Price</span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>