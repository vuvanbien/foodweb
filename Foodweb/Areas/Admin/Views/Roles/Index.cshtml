@model IEnumerable<Foodweb.Models.Role>

@{
    ViewData["Title"] = "Quản lý quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<h2>
    <b>Loại tài khoản</b>
</h2>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">


                <table>

                    <tr>
                        <td>

                            <div class="btn-group" role="group">
                                <a class="btn btn-primary" asp-area="Admin" asp-controller="Roles" asp-action="Create">Thêm loại tài khoản</a>
                            </div>
                        </td>
                    </tr>
                </table>

                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th scope="col"> ID</th>
                            <th scope="col">Name</th>
                            <th scope="col">Chức năng</th>

                        </tr>

                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.RoleId</th>
                                    <td>@item.RoleName</td>

                                    <td>
                                        <div>
                                            <a class="btn btn-success" asp-area="Admin" asp-controller="Roles" asp-route-id="@item.RoleId" asp-action="Details">Chi tiết</a>
                                            <a class="btn btn-warning" asp-area="Admin" asp-controller="Roles" asp-route-id="@item.RoleId" asp-action="Edit">Sửa</a>
                                            <a class="btn btn-danger" asp-area="Admin" asp-controller="Roles" asp-route-id="@item.RoleId" asp-action="Delete">Xóa</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>
<!-- /.row -->
